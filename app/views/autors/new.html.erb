<h1>Add new author</h1>

<!-- forumlarze metodami pomocniczymu -->
<%=  form_for @autor do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <hr />
  <%= f.label :surname %>
  <%= f.text_field :surname %>
  <hr />
  <%= f.label :age %>
  <%= f.text_field :age %>
  <hr />
  <%= f.submit 'save' %>
<% end %>

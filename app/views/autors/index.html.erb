<h1>List of all authors</h1>

<ul>
  <% @autors.each do |autor| %>
    <li>
      <!-- railsowa metoda pomocnicza, co wyswietlone, gdzie przeniesie -->
      <%= link_to autor.fullname, autor_path(id: autor.id) %>
      <%= link_to 'Edit', edit_autor_path(id: autor.id) %>
      <%= link_to 'Delete', autor_path(id: autor.id), method: :delete, data: { confirm: 'Are you sure?' } %>
      <!-- <%= "#{autor.name} #{autor.surname}" %> -->
    </li>
  <% end %>
</ul>
<hr />
<%= link_to 'new author', new_autor_path %>

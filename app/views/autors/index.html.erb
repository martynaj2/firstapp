<h1>List of all authors</h1>

<div class="container">
  <% @autors.each do |autor| %>
  <!-- kazdy row ma zawsze 12 kolumn -->
    <div class="row">
      <!-- railsowa metoda pomocnicza, co wyswietlone, gdzie przeniesie -->
      <div class="col-8"><%= link_to autor.fullname, autor_path(id: autor.id) %></div>
      <div class="col-2"><%= link_to 'Edit', edit_autor_path(id: autor.id) %></div>
      <div class="col-2"><%= link_to 'Delete', autor_path(id: autor.id), method: :delete, data: { confirm: 'Are you sure?' } %></div>
      <!-- <%= "#{autor.name} #{autor.surname}" %> -->
    </div>
  <% end %>
</div

<hr />

<%= link_to 'new author', new_autor_path %>

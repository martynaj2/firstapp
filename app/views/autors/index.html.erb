<div class="jumbotron">
  <h1>List of all authors</h1>
</div>

<div class="container">
  <% @autors.each do |autor| %>
  <!-- kazdy row ma zawsze 12 kolumn -->
    <div class="row">
      <!-- railsowa metoda pomocnicza, co wyswietlone, gdzie przeniesie -->
      <div class="col-sm-12 col-md-8"><%= link_to autor.fullname, autor_path(id: autor.id) %></div>
      <div class="col-sm-12 col-md-2"><%= link_to 'Edit', edit_autor_path(id: autor.id),role: 'button', class:'btn btn-primary' %></div>
      <div class="col-sm-12 col-md-2"><%= link_to 'Delete', autor_path(id: autor.id), method: :delete, data: { confirm: 'Are you sure?' }, role: 'button', class:'btn btn-danger' %></div>
      <!-- <%= "#{autor.name} #{autor.surname}" %> -->
    </div>
  <% end %>
</div

<hr />

<div class="col-md-2"><%= link_to 'new author', new_autor_path, role: 'button', class:'btn btn-success' %></div>
